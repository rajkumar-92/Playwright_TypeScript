{
  "ts-node": {
    // these options are overrides used only by ts-node
      "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "src",
      },
      "include": ["src/**/*"],
      "exclude": ["node_modules"]
    
  },
  
  }
  